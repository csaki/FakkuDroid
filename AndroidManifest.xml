<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fakkudroid"
    android:versionCode="4"
    android:versionName="1.5" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.fakkudroid.core.FakkuDroidApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fakkudroid.DoujinListActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fakkudroid.DoujinActivity"
            android:label="@string/title_activity_doujin" >
        </activity>
        <activity
            android:name="com.fakkudroid.RelatedContentListActivity"
            android:label="@string/related_content" >
        </activity>
        <activity
            android:name="com.fakkudroid.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.fakkudroid.ListOptionActivity"
            android:label="@string/title_activity_list_option" >
        </activity>
        <activity
            android:name="com.fakkudroid.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.fakkudroid.GallerySwipeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_gallery_swipe"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.fakkudroid.FavoriteActivity"
            android:label="@string/title_activity_favorite" >
        </activity>
        <activity
            android:name="com.fakkudroid.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.fakkudroid.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>