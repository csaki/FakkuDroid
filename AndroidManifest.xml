<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fakkudroid"
    android:versionCode="15"
    android:versionName="2.0.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.fakkudroid.core.FakkuDroidApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name="com.fakkudroid.DoujinListActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.fakkudroid.DoujinActivity"
            android:label="@string/title_activity_doujin" >
        </activity>
        <activity
            android:name="com.fakkudroid.RelatedContentListActivity"
            android:label="@string/related_content" >
        </activity>
        <activity
            android:name="com.fakkudroid.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.fakkudroid.ListOptionActivity"
            android:label="@string/title_activity_list_option" >
        </activity>
        <activity
            android:name="com.fakkudroid.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.fakkudroid.GallerySwipeActivity"
            android:label="@string/title_activity_gallery_swipe" 
        	android:theme="@style/Theme.Sherlock">
        </activity>
        <activity
            android:name="com.fakkudroid.FavoriteActivity"
            android:label="@string/title_activity_favorite" >
        </activity>
        <activity
            android:name="com.fakkudroid.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.fakkudroid.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.fakkudroid.PasswordActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fakkudroid.MessageHelpActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.fakkudroid.DownloadListActivity"
            android:label="@string/title_activity_download_list" >
        </activity>
    </application>

</manifest>