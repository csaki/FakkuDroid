<resources>
	<string name="image_html" formatted="false">
	    <![CDATA[
	    	<html>
	    		<head>
	    			<script src=\"file:///android_asset/js/jquery.min.js\"></script>
	    		</head>
	    		<body style=\"margin: 0 0 0 0;\" bgcolor=\'#@color\'>
	    			<script type=\"text/javascript\">
	    				$(window).load(function() {resizeAll(@width,@height);});
	    				$(window).bind(\'resize\', resizeWindow);
	    				function resizeWindow(e) {
	    					if(first){
	    						if(japaneseMode)
	    							$(\'body\').scrollLeft(5000);
	    						else 
	    							$(\'body\').scrollLeft(0);
	    					}
	    					first = false;
	    				}
	    				
	    				var japaneseMode = @japaneseMode;
	    				var first = true;
	    				
	    				function resizeAll(maxWidth, maxHeight){
	    					$(\'.resized\').each(function() {
	    						var ratio = 0;
	    						var width = $(this).width();
	    						var height = $(this).height();
	    						if(width<=height||maxWidth>maxHeight){
	    							ratio = maxWidth / width;
	    							$(this).css(\'width\', maxWidth);
	    							$(this).css(\'height\', height * ratio);
	    							height = height * ratio;
	    							width = width * ratio;
	    						}else{
	    							ratio = maxHeight / height;
	    							$(this).css(\'height\', maxHeight);
	    							$(this).css(\'width\', width * ratio);
	    							width = width * ratio;
	    						}
	    					});
	    					if(japaneseMode)
	    						$(\'body\').scrollLeft(5000);
	    					else 
	    						$(\'body\').scrollLeft(0);
	    							
	    				}	
	    			</script>
	    			<img class=\"resized\" src = \"@url\" style=\"padding:0px;\" onerror=\"this.src=\'file:///android_asset/images/no_image_available.png\'\"/>
	    		</body>
	    	</html>
	    ]]>	    
	</string>
