<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="page_number"
        android:title="@string/pref_title_display_page_number" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_reading_mode_list_titles"
        android:entryValues="@array/pref_reading_mode_list_values"
        android:key="reading_mode"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_reading_mode" />

</PreferenceScreen>