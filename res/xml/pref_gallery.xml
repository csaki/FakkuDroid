<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="force_landscape_checkbox"
        android:title="@string/pref_title_force_landscape" />
    
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="zoom_button_checkbox"
        android:summary="@string/pref_description_zoom_button"
        android:title="@string/pref_title_zoom_button" />
    
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="page_number_checkbox"
        android:title="@string/pref_title_page_number" />

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_reading_mode_list"
        android:entryValues="@array/pref_reading_mode_values"
        android:key="reading_mode_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_reading_mode" />

</PreferenceScreen>