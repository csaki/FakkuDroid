<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_download_dir_list"
        android:entryValues="@array/pref_download_dir_values"
        android:key="download_dir_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_dir_download" />
    
    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:inputType="numberPassword"
        android:key="password_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_password" 
        android:summary="@string/pref_description_password"/>
	
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="perfect_viewer_checkbox"
        android:summary="@string/pref_description_perfect_viewer"
        android:title="@string/pref_title_perfect_viewer" />
</PreferenceScreen>